<resources>

    <!-- Base application theme. -->
    <!-- inherit from the material theme -->
    <style name="AppTheme.Material" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->

        <!--
                <item name="android:colorPrimaryDark">@color/primary_dark_material_dark</item>
                <item name="android:colorPrimary">@color/primary_material_dark</item>
                <item name="android:colorAccent">@color/colorAccent</item>
        -->
        <item name="android:colorEdgeEffect">@color/colorControlHighlightTransparent</item>
        <item name="android:cacheColorHint">@color/cacheColorHint</item>

        <item name="android:scrollbarThumbVertical">@drawable/scroll_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/scroll_track</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/scroll_thumb</item>
        <item name="android:scrollbarTrackHorizontal">@drawable/scroll_track</item>

    </style>

    <!-- Custom Material imagebutton. -->
    <style name="AppTheme.Material.ImageButton" parent="android:Widget.Material.ImageButton">
        <item name="android:background">@drawable/ec_btn_default_material</item>
    </style>

    <style name="AppTheme.Material.DefaultRectangle">
        <item name="android:background">@drawable/ec_default_mtrl_rounded_rectangle</item>
    </style>

    <style name="AppTheme.Material.DefaultRectangleNoInsets">
        <item name="android:background">@drawable/ec_default_mtrl_rounded_rectangle_no_insets</item>
    </style>

</resources>
