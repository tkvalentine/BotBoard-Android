<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:gravity="fill"
    android:background="#d5d5d5"
    android:padding="20dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ec_logo"
            android:maxHeight="196dp"
            android:maxWidth="196dp"
            android:adjustViewBounds="true"
            android:elevation="5dp"
            style="@style/AppTheme.Material.DefaultRectangleNoInsets"
            android:scaleType="fitCenter"
            android:layout_weight="0"
            android:padding="5dp"
            android:layout_margin="5dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/company_name"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        android:layout_weight="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name_without_company"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_weight="0"
        android:paddingTop="20dp" />
<!--
    <com.google.android.gms.common.SignInButton
        android:layout_marginTop="200dp"
        android:id="@+id/login_with_google"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/login_with_google"
        android:layout_weight="0.53" />
-->
    <com.google.android.gms.common.SignInButton
        android:id="@+id/login_with_google2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/login_with_google"
        style="@android:style/TextAppearance.Material"
        android:elevation="10dp"
        android:paddingTop="20dp"
        android:layout_weight="0" />

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>